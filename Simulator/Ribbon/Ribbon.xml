<?xml version='1.0' encoding='utf-8'?>

<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
	<!-- Commands section -->
	<Application.Commands>

		<!-- Declare Tabs -->
		<Command Name="HomeTab" LabelTitle="Home" Symbol="cmdHome" />

		<Command Name="EditGroup" Symbol="cmdEditGroup" LabelTitle="Edit"/>

		<Command Name="Undo" LabelTitle="Undo" Symbol="cmdUndo">
			<Command.LargeImages>
				<Image Source="EditUndo_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="Redo" LabelTitle="Redo" Symbol="cmdRedo">
			<Command.LargeImages>
				<Image Source="EditRedo_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="Cut" LabelTitle="Cut" Symbol="cmdCut">
			<Command.SmallImages>
				<Image Source="EditCut_16.bmp"/>
			</Command.SmallImages>
		</Command>

		<Command Name="Copy" LabelTitle="Copy" Symbol="cmdCopy">
			<Command.SmallImages>
				<Image Source="EditCopy_16.bmp"/>
			</Command.SmallImages>
		</Command>

		<Command Name="Paste" LabelTitle="Paste" Symbol="cmdPaste">
			<Command.SmallImages>
				<Image Source="EditPaste_16.bmp"/>
			</Command.SmallImages>
		</Command>

		<Command Name="CreateGroup" Symbol="cmdCreateGroup" LabelTitle="Create"/>

		<Command Name="CreateBridge" Symbol="cmdCreateBridge" LabelTitle="New Bridge">
			<Command.SmallImages>
				<Image Source="NetworkHub_16.png" MinDPI="96"/>
				<Image Source="NetworkHub_32.png" MinDPI="120"/>
			</Command.SmallImages>
			<Command.LargeImages>
				<Image Source="NetworkHub_32.png"/>
			</Command.LargeImages>
		</Command>

		<Command Name="CreateCable" Symbol="cmdCreateCable" LabelTitle="New Cable">
			<Command.SmallImages>
				<Image Source="Cable_16.png" MinDPI="96"/>
				<Image Source="Cable_24.png" MinDPI="120"/>
				<Image Source="Cable_32.png" MinDPI="168"/>
			</Command.SmallImages>
			<Command.LargeImages>
				<Image Source="Cable_32.png" MinDPI="96"/>
				<Image Source="Cable_48.png" MinDPI="120"/>
				<Image Source="Cable_64.png" MinDPI="168"/>
			</Command.LargeImages>
		</Command>
		
		<Command Name="BridgeGroup" Symbol="cmdBridgeGroup" LabelTitle="Bridge"/>

		<Command Name="BridgeAddress" Symbol="cmdBridgeAddress" LabelTitle="Address"/>

		<Command Name="EnableSTP" Symbol="cmdEnableSTP" LabelTitle="Enable STP">
			<Command.SmallImages>
				<Image Source="Play_16.png" MinDPI="96"/>
				<Image Source="Play_32.png" MinDPI="120"/>
			</Command.SmallImages>
			<Command.LargeImages>
				<Image Source="Play_32.png"/>
			</Command.LargeImages>
		</Command>

		<Command Name="DisableSTP" Symbol="cmdDisableSTP" LabelTitle="Disable STP">
			<Command.SmallImages>
				<Image Source="Stop_16.png" MinDPI="96"/>
				<Image Source="Stop_32.png" MinDPI="120"/>
			</Command.SmallImages>
			<Command.LargeImages>
				<Image Source="Stop_32.png"/>
			</Command.LargeImages>
		</Command>
		
		<!--__________________________ Declare Quick Access __________________________-->
		<Command Name="cmdQat"/>

		<!-- Declare Menus -->

		<Command Name="FileMenu" LabelTitle="File" Symbol="cmdFileMenu" />

		<Command Name="NewFile" LabelTitle="New" Symbol="cmdFileMenuNew">
			<Command.LargeImages>
				<Image Source="FileMenuNew_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="OpenFile" LabelTitle="Open..." Symbol="cmdFileMenuOpen">
			<Command.LargeImages>
				<Image Source="FileMenuOpen_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="SaveFile" LabelTitle="Save" Symbol="cmdFileMenuSave">
			<Command.LargeImages>
				<Image Source="FileMenuSave_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="SaveFileAs" LabelTitle="Save As..." Symbol="cmdFileMenuSaveAs">
			<Command.LargeImages>
				<Image Source="FileMenuSaveAs_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="CloseFile" LabelTitle="Close" Symbol="cmdFileMenuClose">
			<Command.LargeImages>
				<Image Source="FileMenuClose_32.bmp"/>
			</Command.LargeImages>
		</Command>

		<Command Name="RecentFiles" LabelTitle="Recent Files" Symbol="cmdRecentFiles"/>

		<Command Name="ContextMenuBlankArea" Symbol="cmdContextMenuBlankArea"/>
		<Command Name="ContextMenuBridge" Symbol="cmdContextMenuBridge"/>
		<Command Name="ContextMenuPort" Symbol="cmdContextMenuPort"/>
	
	</Application.Commands>

	<Application.Views>
		<Ribbon>
			<Ribbon.ApplicationMenu>
				<ApplicationMenu CommandName="FileMenu">
					<ApplicationMenu.RecentItems>
						<RecentItems CommandName="RecentFiles" MaxCount="16"/>
					</ApplicationMenu.RecentItems>
					<MenuGroup>
						<Button CommandName="NewFile"/>
						<Button CommandName="OpenFile" />
						<Button CommandName="SaveFile" />
						<Button CommandName="SaveFileAs" />
					</MenuGroup>
					<MenuGroup>
						<Button CommandName="CloseFile" />
					</MenuGroup>
				</ApplicationMenu>
			</Ribbon.ApplicationMenu>
			<Ribbon.Tabs>
				<Tab CommandName="HomeTab">
					<Tab.ScalingPolicy>
						<ScalingPolicy>
							<ScalingPolicy.IdealSizes>
								<!-- This describes the maximum size of each group in the tab. -->
								<Scale Group="EditGroup" Size="Medium" />
							</ScalingPolicy.IdealSizes>
							<!-- This describes the order and how the groups shrink when the window is resized. -->
							<Scale Group="EditGroup" Size="Small" />
						</ScalingPolicy>
					</Tab.ScalingPolicy>

					<Group CommandName="EditGroup" SizeDefinition="FiveButtons">
						<SplitButtonGallery CommandName="Undo" TextPosition="Bottom" Type="Commands" ItemHeight="20" ItemWidth="200">
							<SplitButtonGallery.MenuLayout>
								<VerticalMenuLayout/>
							</SplitButtonGallery.MenuLayout>
							<SplitButtonGallery.MenuGroups>
								<MenuGroup>
								</MenuGroup>
							</SplitButtonGallery.MenuGroups>
						</SplitButtonGallery>
						<SplitButtonGallery CommandName="Redo" TextPosition="Bottom" Type="Commands" ItemHeight="20" ItemWidth="200">
							<SplitButtonGallery.MenuLayout>
								<VerticalMenuLayout/>
							</SplitButtonGallery.MenuLayout>
							<SplitButtonGallery.MenuGroups>
								<MenuGroup>
								</MenuGroup>
							</SplitButtonGallery.MenuGroups>
						</SplitButtonGallery>
						<Button CommandName="Cut"/>
						<Button CommandName="Copy"/>
						<Button CommandName="Paste"/>
					</Group>
					<Group CommandName="CreateGroup" SizeDefinition="TwoButtons">
						<Button CommandName="CreateBridge"/>
						<Button CommandName="CreateCable"/>
					</Group>
					<Group CommandName="BridgeGroup">
						<SizeDefinition>
							<ControlNameMap>
								<ControlNameDefinition Name="dropDown1"/>
							</ControlNameMap>
							<GroupSizeDefinition Size="Small">
								<ControlSizeDefinition ControlName="dropDown1" ImageSize="Small" IsLabelVisible="false"/>
							</GroupSizeDefinition>
							<GroupSizeDefinition Size="Medium">
								<ControlSizeDefinition ControlName="dropDown1" ImageSize="Small" IsLabelVisible="true"/>
							</GroupSizeDefinition>
							<GroupSizeDefinition Size="Large">
								<ControlSizeDefinition ControlName="dropDown1" ImageSize="Large" IsLabelVisible="true"/>
							</GroupSizeDefinition>
						</SizeDefinition>
						<ComboBox CommandName="BridgeAddress" IsEditable="true" IsAutoCompleteEnabled="false"/>
					</Group>
				</Tab>
			</Ribbon.Tabs>
			<Ribbon.QuickAccessToolbar>
				<QuickAccessToolbar CommandName="cmdQat">
					<QuickAccessToolbar.ApplicationDefaults>
						<Button CommandName="SaveFile" ApplicationDefaults.IsChecked="true"/>
					</QuickAccessToolbar.ApplicationDefaults>
				</QuickAccessToolbar>
			</Ribbon.QuickAccessToolbar>

		</Ribbon>

		<ContextPopup>
			<ContextPopup.ContextMenus>
				<ContextMenu Name="ContextMenuBlankArea">
					<MenuGroup>
						<Button CommandName="CreateBridge"/>
						<Button CommandName="CreateCable"/>
					</MenuGroup>
					<MenuGroup>
						<Button CommandName="Paste"/>
					</MenuGroup>
				</ContextMenu>
				<ContextMenu Name="ContextMenuBridge">
					<MenuGroup>
						<Button CommandName="EnableSTP"/>
						<Button CommandName="DisableSTP"/>
					</MenuGroup>
				</ContextMenu>
				<ContextMenu Name="ContextMenuPort">
					<MenuGroup>
					</MenuGroup>
				</ContextMenu>
			</ContextPopup.ContextMenus>
			<ContextPopup.ContextMaps>
				<ContextMap CommandName="ContextMenuBlankArea" ContextMenu="ContextMenuBlankArea"/>
				<ContextMap CommandName="ContextMenuBridge" ContextMenu="ContextMenuBridge"/>
				<ContextMap CommandName="ContextMenuPort" ContextMenu="ContextMenuPort"/>
			</ContextPopup.ContextMaps>
		</ContextPopup>
	</Application.Views>
</Application>
